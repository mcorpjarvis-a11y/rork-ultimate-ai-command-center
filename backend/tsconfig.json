{
  "compilerOptions": {
    // Target modern Node.js
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    
    // Output configuration
    "outDir": "./dist",
    
    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    // Type checking - relaxed for backend
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "noEmitOnError": false,
    
    // Additional checks
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    
    // Emit configuration
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    
    // Interop constraints
    "isolatedModules": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Types
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../services/**/*.ts",
    "../config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "../services/**/__tests__/**",
    "../services/**/**.test.ts",
    "../services/**/**.spec.ts",
    "../app",
    "../components",
    "../screens",
    "../contexts",
    "../hooks",
    "../lib",
    "../types",
    "../constants"
  ]
}
