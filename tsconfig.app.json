{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native"
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "screens/**/*.ts",
    "screens/**/*.tsx",
    "contexts/**/*.ts",
    "contexts/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.tsx",
    "App.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "backend/**",
    "node_modules"
  ]
}
