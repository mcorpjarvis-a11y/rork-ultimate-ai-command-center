# Production Environment Configuration
# Replace these URLs with your actual backend deployment URLs

# Backend API Configuration
EXPO_PUBLIC_API_URL=https://your-backend-url.com
EXPO_PUBLIC_WS_URL=wss://your-backend-url.com

# Environment
NODE_ENV=production

# AI Service Keys (Use production keys, not development burner keys)
# Get your own keys from the respective providers
EXPO_PUBLIC_GROQ_API_KEY=
EXPO_PUBLIC_OPENAI_API_KEY=
EXPO_PUBLIC_GEMINI_API_KEY=
EXPO_PUBLIC_ANTHROPIC_API_KEY=
EXPO_PUBLIC_HUGGINGFACE_TOKEN=

# Speech Services (Optional)
EXPO_PUBLIC_STT_URL=https://your-stt-service.com/transcribe
EXPO_PUBLIC_TTS_URL=https://your-tts-service.com/synthesize

# Social Media Integration (Optional)
EXPO_PUBLIC_INSTAGRAM_ACCESS_TOKEN=
EXPO_PUBLIC_YOUTUBE_API_KEY=
EXPO_PUBLIC_TIKTOK_ACCESS_TOKEN=
EXPO_PUBLIC_TWITTER_API_KEY=

# Google Services (Optional)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=
EXPO_PUBLIC_GOOGLE_CLIENT_SECRET=

# Security
EXPO_PUBLIC_ENCRYPTION_ENABLED=true
EXPO_PUBLIC_AUDIT_LOGGING=true

# Feature Flags
EXPO_PUBLIC_ENABLE_AUTONOMOUS_MODE=true
EXPO_PUBLIC_ENABLE_SELF_MODIFICATION=false
EXPO_PUBLIC_ENABLE_BACKGROUND_SERVICES=true
